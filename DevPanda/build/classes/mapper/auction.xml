	<!-- 페이징 처리된 경매 데이터 조회 -->
	<select id="getAuctionsWithPagination" parameterType="map"
		resultType="dto.Auction">
		SELECT a.auctionNum,
		a.title, a.minSalary, a.maxSalary,
		p.personImage,
		p.nickName
		FROM auction a
		JOIN person p ON a.id = p.id
		ORDER BY a.auctionNum
		LIMIT #{limit} OFFSET #{offset}
	</select>

